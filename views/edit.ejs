<%- include('partials/header')-%>



<div class="container" style="margin-top:60px">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title"><strong>Edit Podcast</strong></h3></div>
            <div class="panel-body">
                <form action="/podcast/edit/<%=podcastData.id%>" method="POST" role="form" id="loginForm">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" name="title"  class="form-control" placeholder="Title" required="" value="<%=podcastData.title%>" ">
                    </div>
                    <div class="form-group">
                        <label for="tag">Tag</label>
                        <select name="tag" class="form-control" required="">
                            <option class="form-control" value="tech" <%if(podcastData.tag == 'tech'){"selected=''"}%> >#Tech</option>
                            <option class="form-control" value="politics" <%if(podcastData.tag == 'politics'){%><%="selected"%><%}%>>#Politics</option>
                            <option class="form-control" value="music" <%if(podcastData.tag == 'music'){%><%="selected"%><%}%>>#Music</option>
                            <option class="form-control" value="comedy" <%if(podcastData.tag == 'comedy'){%><%="selected"%><%}%>>#Comedy</option>
                            <option class="form-control" value="religion" <%if(podcastData.tag == 'religion'){%><%="selected"%><%}%>>#Religion</option>
                            <option class="form-control" value="science" <%if(podcastData.tag == 'science'){%><%="selected"%><%}%>>#Science</option>
                            <option class="form-control" value="sport" <%if(podcastData.tag == 'sport'){%><%="selected"%><%}%>>#Sport</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="title">Descritption</label><br>
                        <textarea class="form-control" rows="5" id="comment" name="description"><%=podcastData.description%> </textarea>
                    </div>
                    <!--
                    <div class="form-group">
                        <label for="image">Desc. Image</label>
                        <input type="file" id="image" name="image" accept="image/*" required>
                    </div>
                    <div class="form-group">
                        <label for="image">Audio File</label>
                        <input type="file" id="image" name="audio" accept=".mp3,audio/*" required>
                    </div>
                    -->
                    <button type="submit" class="btn btn-sm btn-default">Update</button>
                    <a class="btn btn-default pull-right" data-record-id="54" data-record-title="Something cool" data-toggle="modal" data-target="#confirm-delete">Delete</a>
                    
                </form>
            </div>
        </div>
    </div>
</div>


<script data-require="jquery@*" data-semver="2.0.3" src="//code.jquery.com/jquery-2.0.3.min.js"></script>
<script data-require="bootstrap@*" data-semver="3.1.1" src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>



<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h4 class="modal-title" id="myModalLabel">Confirm Delete</h4>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        
        <a href="/podcast/delete/<%=podcastData.id%>" class="btn btn-danger btn-ok" data-record-id="54" data-record-title="Something cool">Delete</a>
      </div>
    </div>
  </div>
</div>


